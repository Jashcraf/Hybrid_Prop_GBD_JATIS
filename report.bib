@article{Worku:20,
author = {Norman G. Worku and Herbert Gross},
journal = {J. Opt. Soc. Am. A},
keywords = {Electric fields; Gaussian beams; Optical components; Optical systems; Propagation methods; Ultrashort pulses},
number = {1},
pages = {98--107},
