journal = {Opt. Express},
keywords = {Detectors; Arrays; Cameras; Geometric optics ; Lens system design; Imaging systems; Photography; Optical engineering; Resolution; Curvature sensors; Digital imaging; Image sensors; Imaging systems; Optical surfaces; Optical systems},
